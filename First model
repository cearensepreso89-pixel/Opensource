    collapsed = not collapsed
    local targetSize = collapsed and UDim2.new(1, -20, 0, 0) or UDim2.new(1, -20, 0, 200)
    local tween = TweenService:Create(OptionsFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = targetSize})
    tween:Play()
    CollapseButton.Text = collapsed and "‚ñ≤ Mostrar Op√ß√µes" or "‚ñº Ocultar Op√ß√µes"
