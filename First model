-- // Bot√£o expandir/recolher menu
local ExpandButton = Instance.new("TextButton")
ExpandButton.Size = UDim2.new(0, 120, 0, 35)
ExpandButton.Position = UDim2.new(1, -130, 0, 5)
ExpandButton.BackgroundColor3 = Color3.fromRGB(40, 40, 70)
ExpandButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ExpandButton.Text = "‚ûï Expandir"
ExpandButton.Font = Enum.Font.GothamBold
ExpandButton.TextSize = 16
ExpandButton.BorderSizePixel = 0
ExpandButton.Parent = MainFrame

local expanded = false
ExpandButton.MouseButton1Click:Connect(function()
    expanded = not expanded
    local targetSize = expanded and UDim2.new(0, 400, 0, 400) or UDim2.new(0, 280, 0, 300)
    local tween = TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = targetSize})
    tween:Play()
    ExpandButton.Text = expanded and "‚ûñ Recolher" or "‚ûï Expandir"
end)

